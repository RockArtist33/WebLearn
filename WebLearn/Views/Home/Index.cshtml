@model IEnumerable<WebLearn.Models.Courses>

@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_IndexLayout.cshtml";
}

<div class="d-flex">
    <h1 class="flex-start">
        Courses
    </h1>
    <div class="flex-fill"></div>
    <a href="/Courses/Create" style="padding:auto;padding-top:15px;padding-bottom:15px;" class=" flex-end btn btn-primary">Create</a>
</div>


<div class="d-flex flex-fill flex-wrap">
    @foreach (var item in Model) {
        <course class="course">
            <a href="/Courses?id=@Html.DisplayFor(modelItem => item.course_Id)" style="text-decoration: none; color:black">
                @if (item.front_image is null)
                {
                    <div style="width:100%;height:40%;background-color:blue;border-top-left-radius:15px;border-top-right-radius:15px;"></div>
                }
                else
                {
                    <img style="width:100%;height:40%;background-color:blue;border-top-left-radius:15px;border-top-right-radius:15px;" src="@Html.DisplayFor(modelItem => item.front_image)">
                }
                <div class="flex-column p-3">
                    <h5>@Html.DisplayFor(modelItem => item.course_name)</h5>
                    <p>@Html.DisplayFor(modelItem => item.course_description)</p>
                </div>
            </a>
        </course>
}
</div>