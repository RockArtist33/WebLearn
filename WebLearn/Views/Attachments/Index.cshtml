@model IEnumerable<WebLearn.Models.Attachments>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttachmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttachmentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttachmentUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttachmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AttachmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AttachmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
